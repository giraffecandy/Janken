<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/paaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="パー"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chokiButton"
        tools:layout_editor_absoluteY="18dp" />

    <Button
        android:id="@+id/guuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="グー"
        app:layout_constraintEnd_toStartOf="@+id/chokiButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="18dp" />

    <Button
        android:id="@+id/chokiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="チョキ"
        app:layout_constraintEnd_toStartOf="@+id/paaButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guuButton"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cpu"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="168dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="勝敗"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="249dp" />
</androidx.constraintlayout.widget.ConstraintLayout>